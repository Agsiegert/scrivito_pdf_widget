<div class="inline-pdf" data-url="<%= pdf.url_to_pdf %>" itemscope="itemsope" itemtype="http://schema.org/MediaObject">
  <meta itemprop="contentUrl" value="<%= pdf.url_to_pdf %>"/>
  <meta itemprop="contentSize" value="<%= number_to_human_size(pdf.binary_length) %>"/>
  <meta itemprop="encodingFormat" value="pdf"/>

  <meta itemprop="name" value="<%= pdf.title.presence ||Â pdf.name %>"/>
  <meta itemprop="description" value="<%= pdf.description %>"/>

  <canvas></canvas>
  <div class="pdf-bar">
    <div class="button pdf-first">
      <%= fa_icon 'angle-double-left', title: 'first Page' %>
    </div>
    <div class="button pdf-prev">
      <%= fa_icon 'angle-left', title: 'prev Page' %>
    </div>
    <div class="button pdf-next">
      <%= fa_icon 'angle-right', title: 'next Page' %>
    </div>
    <div class="button pdf-last">
      <%= fa_icon 'angle-double-right', title: 'last Page' %>
    </div>
    <div class="button pdf-download">
      <a class="link" href="<%= pdf.url_to_pdf %>" title="Download Pdf">
        download
      </a>
    </div>
    <div class="pdf-page-numbers">
    </div>
  </div>
</div>
